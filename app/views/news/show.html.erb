<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1> <%= @news.title %> </h1>
    <div>
      por <span class="label label-default"><%= @news.author %></span> en <span><%= @news.published %></span>
    </div>
    <br>
    <div class="summary"><%= @news.subtitle %></div>
    <br>
    <div class="content">  <%= @news.body %></div>
  </div>
  <div class="col-md-2"></div>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <% @news.comments.each do |comment| %>
    <h2>Comentarios</h2>
    <div class="row">
      <div class="col-md-1">
        <%= comment.author %>
      </div>
      <div class="col-md-9">
        <%= comment.content %>
      </div>
    </div>
    <% end %>
    <br>
  </div>
  <div class="col-md-2"></div>

</div>





<%= link_to 'Edit', edit_news_path(@news) %> |
<%= link_to 'Back', news_index_path %>
