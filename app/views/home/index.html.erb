<div class="container">
  <div class="alert alert-info text-center" role="alert">
    Ultimas Noticias
  </div>
  <div class="row">
    <% @news[0..9].each do |news| %>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
          <article class="">
            <h5><%=link_to news.title, news %></h5>
            <div class="summary">
              <% if news.subtitle.length > 249 %>
                  <%= news.subtitle[0..249] + "..." %>
              <% else %>
                  <%= news.subtitle %>
              <% end %>
              <% if news.comments.count > 0 %>
                  <a href="#" title="<%= news.comments.count %> Comentarios">
                    <span class="badge"><%= news.comments.count %></span></a><br>
              <% end %>
          </article>
        </div>
    <% end %>
  </div>
</div>
